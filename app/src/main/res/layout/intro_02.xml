<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:paddingBottom="@dimen/padding_page_bottom_96dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appstart_logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_48dp"
                android:src="@drawable/piato_banner"
                app:layout_constraintDimensionRatio="4:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/intro_02_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="@string/intro_02_title"
                android:textColor="@color/green_250"
                android:textSize="@dimen/text_size_34sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appstart_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/intro_02_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="@string/intro_02_text"
                android:textColor="@color/green_250"
                android:textSize="@dimen/text_size_22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/intro_02_title" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/intro_02_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:src="@drawable/intro_02_img"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/intro_02_text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/intro_02_generate_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:background="@drawable/card_green100_corners_round_32dp"
                android:drawableEnd="@drawable/icon_arrow_right"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_16dp"
                android:paddingVertical="@dimen/margin_12dp"
                android:text="@string/generate_qr_code"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/intro_02_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>